<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Kuka Agylus Learning</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">
        <div class="container">
            <div class="navbar-header">
                @Html.ActionLink("Kuka Agilus Learning", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("About", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                </ul>
                <input type="hidden" id="tips-display-state" value="show" />
                <ul class="nav navbar-nav navbar-right">
                    <li><input type="button" id="btn-display-tips" class="btn btn-default navbar-btn" value="Hide tips" onclick="SwitchDisplayTips()"></li>
                </ul>
            </div>

        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Kuka Agilus Learning</p>
        </footer>
    </div>
    @RenderSection("scripts", required: false)
</body>
</html>

<script>
    function SwitchDisplayTips() {
        if ($('#tips-display-state').val() == 'show') {
            $('#btn-display-tips').val('Show tips');
            $('#tips-display-state').val("hide");
            $('.tips').hide();
        }else
        {
            $('#btn-display-tips').val('Hide tips');
            $('#tips-display-state').val("show");
            $('.tips').show();
        }
    }
</script>